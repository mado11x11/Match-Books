<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.raisetech.mapper.BookMapper">
    <select id="findAll" resultType="com.raisetech.entity.Book">
        SELECT * FROM books
    </select>
    
    <select id="findName" resultType="com.raisetech.entity.Book">
        SELECT * FROM books WHERE name=#{name}
    </select>
</mapper>

